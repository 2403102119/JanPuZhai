<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.lxkj.jpz.Activity.PersonalActivity">
  <LinearLayout
      android:padding="@dimen/dp_15"
      android:background="@color/white"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView
          android:text="@string/head_portrait"
          android:textColor="#1A1A1A"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content" />
      <com.makeramen.roundedimageview.RoundedImageView
          android:id="@+id/ri_icon"
          android:layout_width="33dp"
          android:layout_height="33dp"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:layout_marginRight="8dp"
          android:scaleType="centerCrop"
          android:src="@mipmap/logo"
          app:riv_border_color="#333333"
          app:riv_border_width="0dp"
          app:riv_oval="true" />
      <ImageView
          android:scaleType="fitXY"
          android:src="@mipmap/xiangyou"
          android:layout_width="11dp"
          android:layout_height="11dp" />
  </LinearLayout>
    <View
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/ll_name"
        android:padding="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/nickname"
            android:textColor="#1A1A1A"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_name"
            android:text=""
            android:gravity="right"
            android:layout_marginRight="6.5dp"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:scaleType="fitXY"
            android:src="@mipmap/xiangyou"
            android:layout_width="11dp"
            android:layout_height="11dp" />
    </LinearLayout>
    <View
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/ll_phone"
        android:padding="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/Phone_number"
            android:textColor="#1A1A1A"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_phone"
            android:text=""
            android:gravity="right"
            android:layout_marginRight="6.5dp"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:scaleType="fitXY"
            android:src="@mipmap/xiangyou"
            android:layout_width="11dp"
            android:layout_height="11dp" />
    </LinearLayout>
    <View
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/ll_sex"
        android:padding="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/sex"
            android:textColor="#1A1A1A"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_sex"
            android:text=""
            android:gravity="right"
            android:visibility="gone"
            android:layout_marginRight="6.5dp"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:gravity="center_vertical|right"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="6.5dp"
            android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/im_nan"
               android:src="@mipmap/weixuan"
               android:padding="@dimen/dp_5"
               android:layout_width="23dp"
               android:layout_height="23dp" />
            <TextView
                android:layout_marginLeft="5dp"
                android:text="@string/man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/im_nv"
                android:layout_marginLeft="15dp"
                android:padding="@dimen/dp_5"
                android:src="@mipmap/weixuan"
                android:layout_width="23dp"
                android:layout_height="23dp" />
            <TextView
                android:layout_marginLeft="@dimen/dp_5"
                android:text="@string/woman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:scaleType="fitXY"
            android:src="@mipmap/xiangyou"
            android:layout_width="11dp"
            android:layout_height="11dp" />
    </LinearLayout>
    <View
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:padding="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/identity"
            android:textColor="#1A1A1A"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_shenfen"
            android:text=""
            android:gravity="right"
            android:layout_marginRight="6.5dp"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:scaleType="fitXY"
            android:src="@mipmap/xiangyou"
            android:layout_width="11dp"
            android:layout_height="11dp" />
    </LinearLayout>
    <View
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:padding="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/region"
            android:textColor="#1A1A1A"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_address"
            android:text=""
            android:gravity="right"
            android:layout_marginRight="6.5dp"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:scaleType="fitXY"
            android:src="@mipmap/xiangyou"
            android:layout_width="11dp"
            android:layout_height="11dp" />
    </LinearLayout>
    <View
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>
