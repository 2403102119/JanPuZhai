<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.lxkj.jpz.Activity.SetActivity">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/change_password"
                android:textColor="#333"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_11"
                android:layout_height="@dimen/dp_11"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/xiangyou" />

        </RelativeLayout>

        <View
            android:background="#F2F2F2"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:id="@+id/rel5"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/Changepaymentpassword"
                android:textColor="#333"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_11"
                android:layout_height="@dimen/dp_11"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/xiangyou" />

        </RelativeLayout>

        <View
            android:background="#F2F2F2"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:id="@+id/rel2"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/feedback"
                android:textColor="#333"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_11"
                android:layout_height="@dimen/dp_11"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/xiangyou" />

        </RelativeLayout>

        <View
            android:background="#F2F2F2"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:id="@+id/rel3"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/version_updating"
                android:textColor="#333"
                android:textSize="@dimen/sp_14" />
            <TextView
                android:id="@+id/banbenhao"
                android:text="1.01"
                android:textSize="14sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/im"
                android:layout_marginRight="15dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/im"
                android:layout_width="@dimen/dp_11"
                android:layout_height="@dimen/dp_11"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/xiangyou" />

        </RelativeLayout>

        <View
            android:background="#F2F2F2"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:id="@+id/ll_clear"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/clear_cache"
                android:textColor="#333"
                android:textSize="@dimen/sp_14" />
            <TextView
                android:id="@+id/tv_huancun"
                android:text=""
                android:textSize="14sp"
                android:textColor="#1A1A1A"
                android:gravity="right"
                android:layout_marginRight="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="@dimen/dp_11"
                android:layout_height="@dimen/dp_11"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/xiangyou" />

        </LinearLayout>
        <View
            android:background="#F2F2F2"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:id="@+id/yonghu"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/About_Us"
                android:textColor="#333"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_11"
                android:layout_height="@dimen/dp_11"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/xiangyou" />

        </RelativeLayout>

        <View
            android:background="#F2F2F2"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


        <LinearLayout
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/switch_the_language"
                android:textColor="#333"
                android:textSize="@dimen/sp_14" />
            <ImageView
                android:id="@+id/im_kaiguan"
                android:src="@mipmap/guan"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <View
            android:background="#F2F2F2"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>




        <TextView
            android:id="@+id/tv_login"
            android:layout_width="287dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="71dp"
            android:background="@drawable/biankuang7"
            android:gravity="center"
            android:text="@string/log_off"
            android:textColor="@color/grey3"
            android:textSize="16sp" />


    </LinearLayout>
</LinearLayout>
