<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp_15"
    android:background="@color/white"
    tools:context="com.lxkj.jpz.Activity.RechargeActivity">
    <LinearLayout
        android:id="@+id/ll_chonghzi"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/shuruchongzhijine"
            android:textSize="14sp"
            android:textColor="@color/grey3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_jine"
            android:hint="@string/qingshuruchongzhijine"
            android:textSize="11sp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_5"
            android:textColor="@color/grey3"
            android:layout_marginLeft="9dp"
            android:singleLine="true"
            android:inputType="number|numberDecimal"
            android:background="@drawable/biankuang"
            android:layout_width="match_parent"
            android:layout_height="28dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_fukuan"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="$"
                android:textSize="25sp"
                android:layout_marginTop="@dimen/dp_2"
                android:textColor="@color/grey3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_money"
                android:text="0.00"
                android:textColor="@color/grey3"
                android:textSize="35dp"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:text="@string/xuzhifu"
            android:textSize="13sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/red_them"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:text="@string/xuanzezhifufangshi"
        android:textSize="13sp"
        android:textColor="@color/grey_999"
        android:layout_marginTop="45.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_weixin"
        android:layout_marginTop="27dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/im_weixin"
            android:src="@mipmap/xuanzhong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/weixinzhifu"
            android:textColor="@color/grey3"
            android:textSize="16sp"
            android:layout_marginLeft="62dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:background="#E7E7E7"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:id="@+id/ll_zhifubao"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/im_zhifubao"
            android:src="@mipmap/weixuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/zhifubaozhifu"
            android:textColor="@color/grey3"
            android:textSize="16sp"
            android:layout_marginLeft="62dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:background="#E7E7E7"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:id="@+id/ll_paypal"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/im_paypal"
            android:src="@mipmap/weixuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/paypal"
            android:textColor="@color/grey3"
            android:textSize="16sp"
            android:layout_marginLeft="62dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:id="@+id/v1"
        android:layout_marginTop="10dp"
        android:background="#E7E7E7"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:id="@+id/ll_yue"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/im_yue"
            android:src="@mipmap/weixuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/yuezhifu"
            android:textColor="@color/grey3"
            android:textSize="16sp"
            android:layout_marginLeft="62dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:id="@+id/v2"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:background="#E7E7E7"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:id="@+id/ll_xianxia"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/im_xianxia"
            android:src="@mipmap/weixuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/xianxiazhifu"
            android:textColor="@color/grey3"
            android:textSize="16sp"
            android:layout_marginLeft="62dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:background="#E7E7E7"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <TextView
        android:id="@+id/tv_login"
        android:layout_width="287dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/biankuang3"
        android:gravity="center"
        android:text="@string/top_up"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>
