<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lxkj.hrhc.Activity.ClassifyActivity">
    <!--以下是大小分类-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="6">

        <!--左侧大分类-->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/RecyclerViewLeft"
            android:layout_width="0dp"
            android:background="#F6F6F6"
            android:layout_height="match_parent"
            android:layout_weight="1.5" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="4.5"
            android:layout_height="match_parent">
            <LinearLayout

                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="46dp">
               <TextView
                   android:id="@+id/tv_zonghe"
                   android:text="综合"
                   android:gravity="center"
                   android:textSize="15sp"
                   android:textColor="@color/red_them"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="match_parent" />
                <LinearLayout
                    android:id="@+id/ll_sales"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_xiaoliang"
                        android:text="销量"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:id="@+id/im_shang"
                        android:layout_marginLeft="3dp"
                        android:src="@mipmap/kong"
                        android:layout_width="6dp"
                        android:layout_height="9dp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_price"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_jiage"
                        android:text="价格"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:id="@+id/im_xia"
                        android:layout_marginLeft="3dp"
                        android:src="@mipmap/kong"
                        android:layout_width="6dp"
                        android:layout_height="9dp" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="#F6F6F6"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/smart"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.scwang.smartrefresh.layout.header.ClassicsHeader
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.scwang.smartrefresh.layout.header.ClassicsHeader>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/RecyclerViewRight"
                    android:layout_width="match_parent"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp_5"
                    android:background="#fff" />
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>

        </LinearLayout>

        <!--右侧小分类分类-->



    </LinearLayout>
</LinearLayout>
