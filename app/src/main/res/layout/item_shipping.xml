<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:paddingTop="15dp"
    android:background="@drawable/biankuang4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView
          android:id="@+id/tv_name"
          android:text="王先生"
          android:textSize="14sp"
          android:textColor="#333333"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      <TextView
          android:id="@+id/tv_phone"
          android:text="18836547564"
          android:layout_marginLeft="10dp"
          android:textSize="13sp"
          android:textColor="#333333"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

  </LinearLayout>
    <TextView
        android:id="@+id/tv_site"
        android:text="河南省郑州市郑东新区通泰路与宏昌街交叉口商都世贸中心D座2202"
        android:layout_marginTop="13dp"
        android:textSize="12sp"
        android:textColor="#666666"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="10dp"
        android:background="#F0F0F0"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/imageSel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@mipmap/weixuan" />
        <TextView
            android:layout_gravity="center"
            android:text="设为默认"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_redact"
            android:text="编辑"
            android:background="@drawable/biankuang"
            android:padding="5dp"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#333333"
            android:layout_width="66.5dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_delate"
            android:text="删除"
            android:background="@drawable/biankuang"
            android:padding="5dp"
            android:textSize="12sp"
            android:textColor="#333333"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_width="66.5dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>