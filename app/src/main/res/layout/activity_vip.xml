<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lxkj.jpz.Activity.VipActivity">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_vip"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_jinpai"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_jinpai"
                    android:text="@string/gold_medal"
                    android:textSize="16sp"
                    android:textColor="@color/red_them"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:id="@+id/view_jinpai"
                    android:layout_marginTop="7.5dp"
                    android:background="@color/red_them"
                    android:layout_width="40dp"
                    android:layout_height="2.5dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_yinpai"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_yinpai"
                    android:text="银牌VIP"
                    android:textSize="16sp"
                    android:textColor="@color/grey3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:id="@+id/view_yinpai"
                    android:visibility="invisible"
                    android:layout_marginTop="7.5dp"
                    android:background="@color/red_them"
                    android:layout_width="40dp"
                    android:layout_height="2.5dp"/>
            </LinearLayout>
        </LinearLayout>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ri_vip"
            android:layout_marginTop="29.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="160dp" />
        <TextView
            android:id="@+id/tv_quanyi"
            android:text="@string/Distribution_rights"
            android:textSize="16sp"
            android:textColor="@color/grey3"
            android:layout_marginTop="39dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <WebView
            android:id="@+id/webView"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_40"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="WebViewLayout" >
        </WebView>

    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="34dp">
        <TextView
            android:id="@+id/tv_jiage"
            android:text="$0"
            android:background="#FD3646"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_payment"
            android:text="付款"
            android:background="#FC737E"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>
