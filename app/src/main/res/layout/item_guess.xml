<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginRight="@dimen/dp_5"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <RelativeLayout
            android:background="@mipmap/juxingyinying"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/llView"
                android:background="@drawable/biankuang4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/image1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_170"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="0dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/pinpaiqingcang"
                    app:riv_border_width="0dip"
                    app:riv_corner_radius_top_left="@dimen/dp_5"
                    app:riv_corner_radius_top_right="@dimen/dp_5"
                    app:riv_mutate_background="true"
                    app:riv_oval="false" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_13"
                    android:orientation="horizontal"
                    android:weightSum="7">

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_weight="7"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:lines="2"
                        android:text="南极人（NanJiren）竹炭记忆枕头枕芯 慢回弹太... "
                        android:textColor="#000"
                        android:textSize="@dimen/sp_14" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:orientation="horizontal">

                    <TextView
                        android:background="@drawable/biankuang18"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_marginTop="@dimen/dp_2"
                        android:gravity="center"
                        android:text="$"
                        android:textColor="@color/white"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="0.00"
                        android:textColor="@color/text_teem"
                        android:textSize="@dimen/sp_16" />

                    <ImageView
                        android:id="@+id/tv7"
                        android:src="@mipmap/go"
                        android:layout_width="45dp"
                        android:layout_height="20.5dp"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:gravity="center_vertical|right"/>

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

</LinearLayout>