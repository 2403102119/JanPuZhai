<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.lxkj.jpz.Activity.SearchActivity">
    <View
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="23dp"/>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:background="@drawable/biankuang7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="33dp">
            <ImageView
                android:layout_marginLeft="20dp"
                android:src="@mipmap/search"
                android:layout_width="14dp"
                android:layout_height="14dp" />
            <EditText
                android:id="@+id/et_search"
                android:hint="@string/sousuoninxiangyaodeshangpin"
                android:layout_marginLeft="8dp"
                android:imeOptions="actionSearch"
                android:gravity="center_vertical"
                android:textColorHint="@color/grey_999"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:singleLine="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_search"
            android:text="@string/sousuo"
            android:layout_marginLeft="15dp"
            android:textColor="#6D6C6C"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_lishi"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/lishisousuo"
                android:textSize="15sp"
                android:textColor="@color/grey3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/im_delate"
                android:padding="@dimen/dp_3"
                android:src="@mipmap/shanchu"
                android:layout_width="18dp"
                android:layout_height="18dp" />
        </LinearLayout>
        <com.lxkj.jpz.View.FlowLayout
            android:id="@+id/flow"
            android:padding="@dimen/dp_5"
            android:layout_marginTop="11dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.lxkj.jpz.View.FlowLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_dajia"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/dajiadouziasou"
                android:textSize="15sp"
                android:textColor="@color/grey3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:visibility="gone"
                android:padding="@dimen/dp_3"
                android:src="@mipmap/shanchu"
                android:layout_width="18dp"
                android:layout_height="18dp" />
        </LinearLayout>
        <com.lxkj.jpz.View.FlowLayout
            android:id="@+id/flow_dajia"
            android:padding="@dimen/dp_5"
            android:layout_marginTop="11dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.lxkj.jpz.View.FlowLayout>
    </LinearLayout>

</LinearLayout>
