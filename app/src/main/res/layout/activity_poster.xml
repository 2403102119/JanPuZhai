<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.lxkj.jpz.Activity.PosterActivity">

    <ImageView
        android:id="@+id/icon1"
        android:layout_width="147dp"
        android:layout_height="147dp"
        android:src="@mipmap/logo" />

    <LinearLayout
        android:layout_marginTop="70dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_baocun"
            android:text="@string/Save_the_posters"
            android:gravity="center"
            android:textColor="@color/grey3"
            android:textSize="15sp"
            android:background="@drawable/biankuang7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp" />
        <TextView
            android:visibility="gone"
            android:text="@string/Share_the_posters"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/red_them"
            android:background="@drawable/biankuang6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp" />
    </LinearLayout>
</LinearLayout>
