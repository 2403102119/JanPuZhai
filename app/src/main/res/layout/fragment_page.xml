<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:ignore="NestedWeights,UselessParent,ScrollViewSize,RtlHardcoded,SmallSp,RelativeOverlap,ContentDescription,HardcodedText,UseCompoundDrawables,DisableBaselineAlignment,RtlSymmetry">


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/ns"
        android:layout_below="@+id/page_top"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="140dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="18dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_fenlei"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/quanbufenlei"
                        android:layout_width="47.5dp"
                        android:layout_height="47.5dp" />
                    <TextView
                        android:layout_marginTop="11dp"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:textColor="@color/grey3"
                        android:text="@string/all_classifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_relation"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/lianxi"
                        android:layout_width="47.5dp"
                        android:layout_height="47.5dp" />
                    <TextView
                        android:layout_marginTop="11dp"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:textColor="@color/grey3"
                        android:text="@string/contact_us"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_vip"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/sehnqingvip"
                        android:layout_width="47.5dp"
                        android:layout_height="47.5dp" />
                    <TextView
                        android:layout_marginTop="11dp"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:textColor="@color/grey3"
                        android:text="@string/apply_for"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_pifa"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/shenqingpifa"
                        android:layout_width="47.5dp"
                        android:layout_height="47.5dp" />
                    <TextView
                        android:layout_marginTop="11dp"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:textColor="@color/grey3"
                        android:text="@string/Apply_for_wholesale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <com.youth.banner.Banner
                android:id="@+id/banner_item"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="81dp" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/banner_recycle"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>



        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/page_top"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:gravity="center"
            android:paddingTop="35dp"
            android:paddingBottom="8dp"
            android:layout_alignParentTop="true"
            android:paddingLeft="15dp"
            android:paddingRight="@dimen/dp_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/dingwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv1"
                android:text="金水区"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/im_return"
                android:padding="5dp"
                android:visibility="visible"
                android:src="@mipmap/xiaoxi"
                android:layout_width="31dp"
                android:layout_gravity="center_vertical"
                android:layout_height="29dp" />

        </LinearLayout>
        <LinearLayout
            android:background="@drawable/biankuang6"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_height="31dp">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="16dp"
                    android:src="@mipmap/sousuo"
                    android:layout_width="15dp"
                    android:layout_height="14dp" />
                <TextView
                    android:id="@+id/et_seek"
                    android:hint="@string/keyword_search"
                    android:imeOptions="actionSearch"
                    android:textCursorDrawable="@drawable/my_cursor2"
                    android:layout_marginLeft="12sp"
                    android:background="@null"
                    android:textColorHint="#333333"
                    android:singleLine="true"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_seek"
                    android:text="搜索"
                    android:visibility="gone"
                    android:textSize="14sp"
                    android:padding="3dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
