<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@color/appColor"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="253dp">
        <LinearLayout
            android:layout_marginTop="@dimen/dp_23"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_personal_details"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/ri_icon"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/yongjinzhongxin"
                    app:riv_border_color="#333333"
                    app:riv_border_width="0dp"
                    app:riv_oval="true" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_name"
                        android:text="未登录"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="0dp" />
                    <TextView
                        android:id="@+id/tv_phone"
                        android:text=""
                        android:textSize="14sp"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="0dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_message"
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/im_message"
                    android:padding="5dp"
                    android:src="@mipmap/xinxi"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_moeney"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_wallet"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_balance"
                    android:text="0.00"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="钱包余额"
                    android:layout_marginTop="10dp"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_todyIncome"
                    android:text="0.00"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="今日收益"
                    android:textSize="13sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_historyIncome"
                    android:text="0.00"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="历史收益"
                    android:layout_marginTop="10dp"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zyp.cardview.YcCardView
            app:ycCardElevation="@dimen/dp_5"
            app:ycCardCornerRadius="@dimen/dp_10"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="198dp"
            app:cardUseCompatPadding="true"
            app:ycStartShadowColor="#11000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/biankuang4"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingLeft="8.5dp"
                android:layout_marginTop="11dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="我的订单"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_all"
                    android:text="全部订单 >"
                    android:textSize="14sp"
                    android:layout_marginRight="9dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="18.5dp"
                android:layout_marginBottom="18.5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_obligation"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/qianbao"
                        android:scaleType="fitXY"
                        android:layout_width="23dp"
                        android:layout_height="21dp" />
                    <TextView
                        android:layout_marginTop="15dp"
                        android:text="待付款"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_Overhang"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/daifahuo"
                        android:scaleType="fitXY"
                        android:layout_width="23dp"
                        android:layout_height="21dp" />
                    <TextView
                        android:layout_marginTop="15dp"
                        android:text="待发货"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_receiving"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/daiquhuo"
                        android:scaleType="fitXY"
                        android:layout_width="23dp"
                        android:layout_height="21dp" />
                    <TextView
                        android:layout_marginTop="15dp"
                        android:text="待收货"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_evaluated"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/daipingjia"
                        android:scaleType="fitXY"
                        android:layout_width="23dp"
                        android:layout_height="21dp" />
                    <TextView
                        android:layout_marginTop="15dp"
                        android:text="待评价"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_refund"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/tuikuan"
                        android:scaleType="fitXY"
                        android:layout_width="23dp"
                        android:layout_height="21dp" />
                    <TextView
                        android:layout_marginTop="15dp"
                        android:text="退款售后"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </com.zyp.cardview.YcCardView>

        <com.zyp.cardview.YcCardView
            app:ycCardElevation="@dimen/dp_5"
            app:ycCardCornerRadius="@dimen/dp_10"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:cardUseCompatPadding="true"
            app:ycStartShadowColor="#11000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/biankuang4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="我的服务"
                android:textStyle="bold"
                android:layout_marginLeft="8.5dp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="18.5dp"
                android:layout_marginBottom="18.5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_brokerage"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/yaoqinghaoyou"
                        android:scaleType="fitXY"
                        android:layout_width="18dp"
                        android:layout_height="21dp" />
                    <TextView
                        android:layout_marginTop="15dp"
                        android:text="佣金奖励"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_receiver_address"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/shouhuodizhi"
                        android:scaleType="fitXY"
                        android:layout_width="18dp"
                        android:layout_height="21dp" />
                    <TextView
                        android:layout_marginTop="15dp"
                        android:text="收货地址"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_collect"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/wodeshoucang"
                        android:scaleType="fitXY"
                        android:layout_width="18dp"
                        android:layout_height="21dp" />
                    <TextView
                        android:layout_marginTop="15dp"
                        android:text="我的收藏"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_evaluation"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/wodepingjia"
                        android:scaleType="fitXY"
                        android:layout_width="18dp"
                        android:layout_height="21dp" />
                    <TextView
                        android:layout_marginTop="15dp"
                        android:text="我的评价"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="0dp"
                android:layout_marginBottom="18.5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_updateIcon"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/gerenziliao"
                        android:scaleType="fitXY"
                        android:layout_marginTop="@dimen/dp_7"
                        android:layout_width="18dp"
                        android:layout_height="14dp" />
                    <TextView
                        android:layout_marginTop="15dp"
                        android:text="个人资料"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_faq"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/changjianwenti"
                        android:scaleType="fitXY"
                        android:layout_width="18dp"
                        android:layout_marginTop="2dp"
                        android:layout_height="19dp" />
                    <TextView
                        android:layout_marginTop="15dp"
                        android:text="常见问题"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_about"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/guanyuwomen"
                        android:scaleType="fitXY"
                        android:layout_width="18dp"
                        android:layout_marginTop="2dp"
                        android:layout_height="19dp" />
                    <TextView
                        android:layout_marginTop="15dp"
                        android:text="关于我们"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_set"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/shezhi"
                        android:scaleType="fitXY"
                        android:layout_width="20dp"
                        android:layout_height="21dp" />
                    <TextView
                        android:layout_marginTop="15dp"
                        android:text="设置"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </com.zyp.cardview.YcCardView>
    </LinearLayout>




</RelativeLayout>