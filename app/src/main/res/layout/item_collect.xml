<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_marginTop="21dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/image1"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="0dp"
        android:scaleType="fitXY"
        android:src="@mipmap/pinpaiqingcang"
        app:riv_border_width="0dip"
        app:riv_corner_radius_top_left="@dimen/dp_5"
        app:riv_corner_radius_top_right="@dimen/dp_5"
        app:riv_mutate_background="true"
        app:riv_oval="false" />
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_16"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      <LinearLayout
          android:gravity="center_vertical"
          android:layout_marginTop="5dp"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <TextView
              android:id="@+id/tv_title"
              android:textSize="14sp"
              android:text="红豆薏米粉  600g"
              android:textColor="#111111"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content" />
          <ImageView
              android:id="@+id/im_add"
              android:padding="@dimen/dp_5"
              android:src="@mipmap/gouwuche"
              android:layout_width="25dp"
              android:layout_height="25dp" />
          <ImageView
              android:id="@+id/im_delate"
              android:padding="@dimen/dp_5"
              android:src="@mipmap/shanchu"
              android:layout_width="25dp"
              android:layout_height="25dp" />
      </LinearLayout>
        <View
            android:layout_weight="1"
            android:layout_width="1dp"
            android:layout_height="0dp"/>
        <TextView
            android:id="@+id/tv_sales"
            android:textColor="@color/grey_999"
            android:textSize="12sp"
            android:layout_marginBottom="7dp"
            android:text="@string/sales_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_weight="1"
            android:layout_width="1dp"
            android:layout_height="0dp"/>
        <TextView
            android:id="@+id/tv_price"
            android:textColor="#FF1111"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="7dp"
            android:text="￥30.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>