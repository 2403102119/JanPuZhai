<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.lxkj.jpz.Activity.OrderdetailActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="44dp">
            <TextView
                android:id="@+id/tv_state"
                android:text="@string/dengdaimaijiafukuan"
                android:textSize="14sp"
                android:textColor="@color/grey3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    <View
        android:background="#F6F6F6"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
        <ScrollView
            android:layout_marginBottom="57dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ll_site"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/dp_10"
                    android:background="#fff"
                    android:orientation="vertical">
                    <LinearLayout
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginLeft="@dimen/dp_10">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:gravity="center_vertical"
                            android:text="@string/consignee_information"
                            android:textColor="#111"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>
                    <LinearLayout
                        android:padding="15dp"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginRight="24dp"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_marginLeft="10dp"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/tv_name"
                                    android:text=""
                                    android:textSize="13sp"
                                    android:textColor="#1A1A1A"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/tv_phone"
                                    android:text=""
                                    android:layout_marginLeft="25dp"
                                    android:textSize="13sp"
                                    android:textColor="#1A1A1A"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <TextView
                                android:id="@+id/tv_receiverAddress"
                                android:text=""
                                android:textSize="13sp"
                                android:textColor="#333333"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <ImageView
                            android:src="@mipmap/jiantou"
                            android:visibility="gone"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_tital"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_10">
                    <View
                        android:background="@color/red_them"
                        android:layout_width="3dp"
                        android:layout_height="12dp" />
                    <TextView
                        android:id="@+id/tv_shopName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:text="商品信息"
                        android:textColor="#111"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="#F6F6F6" />
                <!--商品-->
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible" />

                <!--<include layout="@layout/item_order_gift" />-->

              <LinearLayout
                  android:layout_marginTop="20dp"
                  android:layout_marginRight="10dp"
                  android:orientation="horizontal"
                  android:gravity="right"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                 <TextView
                     android:id="@+id/tv_shangpinshuliang"
                     android:text="共0件商品"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />
                  <TextView
                      android:id="@+id/tv_zongji"
                      android:layout_marginLeft="10dp"
                      android:text="$0.00"
                      android:textSize="14sp"
                      android:textStyle="bold"
                      android:textColor="#FF0000"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />
              </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_width="match_parent"
                    android:layout_height="134.5dp"
                    android:background="#fff"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="@string/freight"
                            android:textColor="#111"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/tv_shi"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="right|center_vertical"
                            android:text="$ 0.00"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_14" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="@string/Amount_of_goods"
                            android:textColor="#111"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/tv_yunfei"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:gravity="right|center_vertical"
                            android:text="$0.00"
                            android:textColor="#FF1111"
                            android:textSize="@dimen/sp_14" />

                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="@string/payment_method"
                            android:textColor="#1A1A1A"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/tv_paytype"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_12"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp">
                        <TextView
                            android:text="@string/Buyer_message"
                            android:textSize="14sp"
                            android:gravity="center_vertical"
                            android:textColor="#1A1A1A"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_beizhu"
                            android:background="@null"
                            android:textSize="12sp"
                            android:gravity="right|center_vertical"
                            android:textColor="#333333"
                            android:text="@string/qingliuyan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"
                    android:background="#F6F6F6" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/dp_10"
                    android:background="#fff"
                    android:orientation="vertical">
                    <LinearLayout
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginLeft="@dimen/dp_10">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="@string/order_information"
                            android:textColor="#111"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginRight="24dp"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:id="@+id/ll_number"
                                android:layout_marginLeft="10dp"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="@string/order_reference"
                                    android:textSize="13sp"
                                    android:textColor="#1A1A1A"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/tv_number"
                                    android:text=""
                                    android:layout_marginLeft="25dp"
                                    android:textSize="13sp"
                                    android:textColor="#1A1A1A"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="@string/creation_time"
                                    android:textSize="13sp"
                                    android:textColor="#1A1A1A"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/tv_createdDate"
                                    android:text=""
                                    android:layout_marginLeft="25dp"
                                    android:textSize="13sp"
                                    android:textColor="#1A1A1A"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/ll_fukuan"
                                android:layout_marginTop="30dp"
                                android:layout_marginLeft="10dp"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="付款时间："
                                    android:textSize="13sp"
                                    android:textColor="#1A1A1A"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/tv_fukuan"
                                    android:text="2019-08-23  12:22:10"
                                    android:layout_marginLeft="25dp"
                                    android:textSize="13sp"
                                    android:textColor="#1A1A1A"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/ll_shouhuo"
                                android:layout_marginTop="30dp"
                                android:layout_marginLeft="10dp"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="确认收货："
                                    android:textSize="13sp"
                                    android:textColor="#1A1A1A"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/tv_shouhuo"
                                    android:text="2019-08-23  12:22:10"
                                    android:layout_marginLeft="25dp"
                                    android:textSize="13sp"
                                    android:textColor="#1A1A1A"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/ll_fahuo"
                                android:visibility="gone"
                                android:layout_marginTop="30dp"
                                android:layout_marginLeft="10dp"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="商家发货："
                                    android:textSize="13sp"
                                    android:textColor="#1A1A1A"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/tv_fahuo"
                                    android:text="2019-08-23  12:22:10"
                                    android:layout_marginLeft="25dp"
                                    android:textSize="13sp"
                                    android:textColor="#1A1A1A"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/ll_tuikuan"
                                android:visibility="gone"
                                android:layout_marginTop="30dp"
                                android:layout_marginLeft="10dp"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:text="退款时间："
                                    android:textSize="13sp"
                                    android:textColor="#1A1A1A"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <TextView
                                    android:id="@+id/tv_tuikuan"
                                    android:text="2019-08-23  12:22:10"
                                    android:layout_marginLeft="25dp"
                                    android:textSize="13sp"
                                    android:textColor="#1A1A1A"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_qufukuan"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="49dp">
        <View
            android:background="#E7E7E9"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tv_detaile"
            android:text="@string/qufukuan"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/red_them"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="31dp" />
    </LinearLayout>
</RelativeLayout>
